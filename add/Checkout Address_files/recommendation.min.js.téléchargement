var targetRecommendations=targetRecommendations||{};$(window).on("recommendationReady",function(b,a){$("#"+a).attr("data-recommended-product","true");if(targetRecommendations[a].pageType=="ShoppingCart"){if($(".shopping-cart-wrapper").data("adobe-product-added")!=true){getRecommendedProducts($("body").data("recommendation-url"),targetRecommendations[a].ids.join(","),a,"15",targetRecommendations[a].pageType,"false");}}else{getRecommendedProducts($("body").data("recommendation-url"),targetRecommendations[a].ids.join(","),a,"15",targetRecommendations[a].pageType,targetRecommendations[a].title);}});function getRecommendedProducts(c,d,a,f,b,g){var e=c+"?ProductSKUs=,"+d+"&MaxDisplayProduct="+f+"&PageType="+b+"&Title="+g;$.ajax({url:e,type:"post",success:function(i){if(b=="ShoppingCart"){$("#"+a).html($(i).filter(".product-carousel-container").html());}else{if(b=="AddToCartSuccessModal"){if($(i).find(".upsell-product-image").length>0){if($("#SuccessAddtoCartModal .upsell-products").length>0){$("#SuccessAddtoCartModal .upsell-products").empty();$("#SuccessAddtoCartModal .upsell-products").html($(dataViewExpressShop).find(".upsell-products").html());}else{$("#"+a).html($(i).filter(".adobe-upsell-product").html());}}}else{$("#"+a).html($(i).filter(".product-carousel-container").html());analytics.product.productData.recommendedProducts=$(i).find('input[name="RecommendedProductList"]').val();var h=$("#"+a).find(".product-list-item");$.each(h,function(j,k){if(parseInt($(k).find(".product-tile").data("max-qty"))>0){$(k).find('button[name="addProduct"]').removeClass("hidden");}});if(b=="OrderReceipt"){$("#"+a).addClass("order-recommended-products");RetailShop.initSlickCarousel();}else{RetailShop.initSlickCarousel();}}}},error:function(){}});}